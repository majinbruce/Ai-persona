# Environment variables for Docker deployment
# Copy this to .env.docker and update the values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_complex_for_production
JWT_REFRESH_SECRET=your_super_secret_refresh_jwt_key_here_make_it_different_and_long_for_production

# Database Configuration (these match docker-compose.yml)
POSTGRES_DB=persona_chatbot
POSTGRES_USER=persona_user
POSTGRES_PASSWORD=persona_password

# Other optional configurations
LOG_LEVEL=info
NODE_ENV=production