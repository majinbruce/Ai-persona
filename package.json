{
  "name": "ai-persona-chatbot",
  "version": "1.0.0",
  "description": "AI chatbot that mimics the tones of Hitesh Choudhary and Piyush Garg",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && node index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "data-prep": "cd data-prep && node scraper.js"
  },
  "keywords": ["ai", "chatbot", "persona", "llm"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.77"
  }
}